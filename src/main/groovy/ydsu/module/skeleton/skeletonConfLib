#!/usr/bin/env groovy-shebang
package ydsu.module.skeleton

import groovy.transform.BaseScript
import ydsu.module.skeleton.lib.PathUtil
import ydsu.module.skeleton.lib.YamlUtil
import ydsu.module.util.lib.LoggingBaseScript

@BaseScript LoggingBaseScript baseScript

/**
 * Skeleton script showcasing the use of a configuration file and a class placed under the conf and lib package,
 * respectively.
 */
File moduleYaml = new File(PathUtil.confDir, 'module.yml')
LinkedHashMap moduleContent = YamlUtil.parseYaml(moduleYaml)
info "Content of conf/module.yml:\n${moduleContent.toString()}"
